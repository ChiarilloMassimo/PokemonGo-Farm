{% extends 'base.html.twig' %}

{% block page_title %}
    PokemonGo-Bot List
{% endblock %}

{% block content %}
    <div class="row">
        {% include('messages.html.twig') %}
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Configs
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Auth</th>
                                <th>Username</th>
                                <th>Password</th>
                                <th>Name</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for config in configs %}
                                <tr>
                                    <td>{{ config.authService|title }}</td>
                                    <td><b>{{ config.username }}</b></td>
                                    <td>{{ config.password }}</td>
                                    <td>{{ config.name }}</td>
                                    <td>
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <a href="{{ path('config_edit', { configName : config.name }) }}" type="submit" class="btn btn-info btn-sm btn-block">
                                                    <i class="fa fa-edit"></i> {{ 'config_list.btn_edit'|trans }}
                                                </a>
                                            </div>
                                            <div class="col-lg-4">
                                                <a href="{{ path('bot_show', { configName : config.name }) }}" type="submit" class="btn btn-warning btn-sm btn-block">
                                                    <i class="fa fa-eye"></i> {{ 'config_list.btn_show'|trans }}
                                                </a>
                                            </div>
                                            <div class="col-lg-4">
                                                <a href="{{ path('config_remove', { configName : config.name }) }}" type="submit" class="btn btn-danger btn-sm btn-block">
                                                    <i class="fa fa-remove"></i> {{ 'config_list.btn_remove'|trans }}
                                                </a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}